{
  "name": "mcp-pdl",
  "version": "1.0.0",
  "description": "MCP Product Development Lifecycle Server",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "cli": "tsx src/cli/mcp-cli.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "dashboard:install": "node scripts/setup-dashboard.js --copy",
    "dashboard:open": "node scripts/setup-dashboard.js --open",
    "dashboard:api": "node scripts/dashboard-api.js",
    "dashboard:dev": "npm run dashboard:api & npm run dashboard:open",
    "dashboard:enhanced": "cp dashboard/enhanced.html ~/.claude/data/pdl.html && echo 'Enhanced dashboard installed at file://~/.claude/data/pdl.html'"
  },
  "bin": {
    "mcp-pdl": "dist/cli/mcp-cli.js"
  },
  "keywords": ["mcp", "pdl", "product-development", "project-management"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "commander": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/sqlite3": "^3.1.8",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}